srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
BISON = @BISON@
LEX = @LEX@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@

MAKEDEPEND = @MAKEDEPEND@

LIBS = libsieve.a
DEPLIBS=../lib/libcyrus.a @DEPLIBS@

all: libsieve.a

install:

test: test.o $(DEPLIBS)
	$(CC) $(LDFLAGS) -o test \
	 test.o $(DEPLIBS) $(LIBS)

OBJS=sieve-yacc.o sieve-lex.o comparator.o interp.o message.o script.o \
	tree.o md5.o

libsieve.a: $(OBJS)
	rm -f libsieve.a
	ar cr libsieve.a $(OBJS)
	$(RANLIB) libsieve.a

clean:
	rm -f *.o *.a Makefile.bak makedepend.log

distclean: clean
	rm -f Makefile

depend:
	${MAKEDEPEND} $(CPPFLAGS) $(DEFS) -I$(srcdir) $(CFLAGS) *.c $(srcdir)/*.c 1>makedepend.log 2>&1

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) -I$(srcdir) -I. $(CFLAGS) \
	$<

%-yacc.c %.tab.h: %.y
	$(BISON) -y -d $< && mv y.tab.c $*-yacc.c && mv y.tab.h $*.tab.h

