srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@ -Dbool=char -DHAS_BOOL
CPPFLAGS = -I. -I$(srcdir) @CPPFLAGS@ -I/usr/local/lib/perl5/5.004/CORE -I$(srcdir)/../../../acap
LIBS = @LIBS@ ../../../acap/libacapsieve.a ../../../acap/libacap.a
IMAP_LIBS = @IMAP_LIBS@
DEPLIBS = ../../../acap/libacapsieve.a ../../../acap/libacap.a @DEPLIBS@

CFLAGS = -g
LDFLAGS = -g @LDFLAGS@

SHELL = /bin/sh
MAKEDEPEND = @MAKEDEPEND@

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

PERL=perl5
PERLINC=-I/usr/local/lib/perl5/5.004 -I/usr/local/lib/perl5

OBJS=Cyrus.o

all: Cyrus.so

install:
	$(INSTALL) -s -m 755 imtest $(DESTDIR)$(exec_prefix)/bin

Cyrus.c: Cyrus.xs typemap
	$(PERL) $(PERLINC) /usr/local/lib/perl5/ExtUtils/xsubpp -typemap /usr/local/lib/perl5/ExtUtils/typemap -typemap $(srcdir)/typemap $(srcdir)/Cyrus.xs >Cyrus.c

Cyrus.o: Cyrus.c
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

Cyrus.so: $(OBJS) 
	$(CC) -shared $(OBJS) -o Cyrus.so $(LIBS)

clean:
	rm -f *.o Makefile.bak makedepend.log Cyrus.so Cyrus.c

distclean: clean
	rm -f Makefile

depend: 
	${MAKEDEPEND} $(CPPFLAGS) $(DEFS) $(CFLAGS) *.c $(srcdir)/*.c 1> makedepend.log 2>&1

